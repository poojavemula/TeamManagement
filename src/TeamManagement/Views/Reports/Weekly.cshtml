@model IEnumerable<WeeklyHiresViewModel>

@{ ViewBag.Title = "Weekly Hired Report";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item active" aria-current="page">Weekly Hired Emplopyess Report</li>
                    </ol>
                </nav> <br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Week Start Date</th>
                                    <th>Employees Hired</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.WeekStartDate.ToShortDateString()</td>
                                        <td>
                                            @item.HiredNumber
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
