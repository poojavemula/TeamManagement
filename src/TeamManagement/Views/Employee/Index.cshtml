@model IEnumerable<EmployeeIndexViewModel>

@{ ViewBag.Title = "Employee";}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Employee List</li>
                    </ol>
                </nav> <br /><br />
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <form asp-controller="Employee" asp-action="Index">
                            <p>
                                <input type="text" name="empNo" />
                                <input type="submit" value="Search" />
                            </p>
                        </form>
                        <a class="btn btn-xs btn-outline-success float-md-right" asp-action="Create">New Employee</a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["EmployeeNoSort"]">@Html.DisplayNameFor(model => model.EmployeeNo)</a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSort"]">@Html.DisplayNameFor(model => model.FullName)</a>
                                    </th>
                                    <th>Photo</th>
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="Detail" asp-route-id="@item.Id">
                                                @item.EmployeeNo
                                            </a>
                                        </td>
                                        <td>@item.FullName</td>
                                        <td>
                                            <img src="@Url.Content(item.ImageUrl)" alt="image" />
                                        </td>
                                        <td>
                                            <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fas fa-edit"></i>Edit
                                            </a>
                                            <a class="text-success" asp-action="Detail" asp-route-id="@item.Id">
                                                <i class="fas fa-bars"></i>Detail
                                            </a>
                                            <a class="text-danger" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="far fa-trash-alt"></i>Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

